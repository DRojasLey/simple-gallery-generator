{
  "name": "simple-gallery-gen",
  "version": "1.0.0",
  "description": "Create simple HTML galleries generated from images in a folder, supporting jpg, png and bmp formats.",
  "main": "cli.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/DRojasLey/simple-gallery-generator/"
  },
  "scripts": {
    "test": "\"echo \\\"Error: no test specified\\\" && exit 1\"",
    "createImageList": "node src/cli.js lsimages",
    "copyImages": "node src/cli.js  copyImages ",
    "createThumbnails": "node src/cli.js thumbcreate imageIndex.json",
    "setFiles": "node src/cli.js set-files",
    "setup": "node src/cli.js setup"
  },
  "bin": {
    "simple-gallery-gen": "./src/cli.js"
  },
  "files": [
    "src",
    "gallery",
    "image_utils.js",
    "cli.js",
    "gallery_generator.js",
    "main.js"
  ],
  "keywords": [
    "gallery",
    "HTML",
    "images",
    "png",
    "jpg",
    "bmp",
    "collection",
    "generation"
  ],
  "author": "dfrley",
  "license": "MIT",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.14.2",
    "commander": "^12.1.0",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "sharp": "^0.33.5"
  }
}
